<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/viewpager_rectegle"


    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@id/linear_layout2"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_30sdp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/circle"


                />

            <ImageView
                android:layout_width="@dimen/_34sdp"
                android:layout_height="@dimen/_34sdp"
                android:id="@+id/flagetteam1"
                android:scaleType="centerInside"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/pakistan"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/flaget1"
            android:text="199/1(35.4)"
            android:id="@+id/team1name_tv"
            android:gravity="center"
            android:layout_marginTop="@dimen/_6sdp"
            android:textColor="@color/orange"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_marginLeft="@dimen/_1sdp"
        android:layout_toRightOf="@id/linear_layout2"
       >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="199/1"
            android:id="@+id/team1runandviket_tv"
            android:gravity="center"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(34)"
            android:id="@+id/team1over_tv"
            android:gravity="center"
            android:textColor="@color/orange"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_35sdp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        >
        <TextView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:id="@+id/textview"
            android:textColor="@color/white"
            android:background="@drawable/viewpager_circle"
            android:text="V/S"
            android:layout_gravity="center"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/matchstatus_tv"
            android:layout_marginTop="@dimen/_3sdp"
            android:textColor="@color/orange"
            android:text="hfdgfdfgdfg"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/linear_layout1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_30sdp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/circle"
                >

            </ImageView>
            <ImageView
                android:layout_width="@dimen/_34sdp"
                android:layout_height="@dimen/_34sdp"
                android:src="@drawable/circle"
                android:scaleType="centerInside"

                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/flagetteam2">

            </ImageView>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/flaget2"
            android:text="199/1(35.4)"
            android:layout_marginTop="@dimen/_6sdp"
            android:id="@+id/team2name_tv"
            android:gravity="center"
            android:textColor="@color/orange"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_toLeftOf="@id/linear_layout1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="199/1"
            android:gravity="center"
            android:id="@+id/team2runandviket_tv"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(34)"
            android:gravity="center"
            android:id="@+id/team2over_tv"
            android:textColor="@color/orange"
            />
    </LinearLayout>


